<Window 
	x:Class="KsWare.Presentation.UITestApp.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:KsWare.Presentation.UITestApp"
	mc:Ignorable="d"
	Title="MainWindow" Height="350" Width="525"
>
	<d:DesignProperties.DataContext>
		<local:MainWindowVM />
	</d:DesignProperties.DataContext>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Exit" Command="{Binding ExitAction}"/>
			</MenuItem>
			<MenuItem Header="_View">
				<MenuItem Header="Dialog Window" Command="{Binding ShowDialogAction}"/>
			</MenuItem>
		</Menu>
		<Grid>
			
		</Grid>
	</DockPanel>
</Window>
